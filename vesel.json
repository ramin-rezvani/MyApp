{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python",
        "config": { 
          "maxLambdaSize": "15mb",
          "includeFiles": [
            "templates/**",
            "controllers/**",
            "static/**"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)", 
        "dest": "app.py"
      }
    ]
  }